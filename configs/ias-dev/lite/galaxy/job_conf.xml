<?xml version="1.0"?>
<!-- A sample job config that explicitly configures job running the way it is configured by default (if there is no explicit config). -->
<job_conf>
    <plugins>
        <plugin id="local" type="runner" load="galaxy.jobs.runners.local:LocalJobRunner" workers="5"/>
    </plugins>
    <handlers>
        <handler id="main"/>
    </handlers>

    <destinations>
        <!--<destination id="local" runner="local"/>-->
        <destination id="blast" runner="local">
            <param id="slots">5</param>
        </destination>
    </destinations>

    <tools>
         <tool id="ncbi_blastn_wrapper" destination="blast" />
         <tool id="ncbi_blastp_wrapper" destination="blast" />
         <tool id="ncbi_blastx_wrapper" destination="blast" />
    </tools>

</job_conf>
